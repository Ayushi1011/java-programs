import java.util.*;
class Main 
{
    public static void main(String args[])
    {
        int n,i;
        int sum=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("ENTER A NUMBER: ");
        n=sc.nextInt();
        for(i=1;i<=n/2;i++)
        {
            if(n%i==0)
            sum=sum+i;
        }
        if(sum==n)
        System.out.println("IT IS A PERFECT NUMBER");
        else
        System.out.println("IT IS NOT A PERFECT NUMBER");
        
    }
}

