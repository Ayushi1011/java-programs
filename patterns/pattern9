/******************************************************************************
PATTERN 9: A
           AB
           ABC
           ABCD
*******************************************************************************/

public class Main
{
	public static void main(String[] args)
	{
	    int r,c;
	    for(r=65;r<=68;r++)
	    {
	        for(c=65;c<=r;c++)
	        {
	            System.out.print((char)c);
	        }
	        System.out.println(" ");
	    }
	}
}
